    </servlet>
    <servlet-mapping>
        <servlet-name>spotComments</servlet-name>
        <url-pattern>/spots/comments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>albums</servlet-name>
        <servlet-class>Albums</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>albums</servlet-name>
        <url-pattern>/albums</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>GListener</listener-class>
    </listener>

